	background: #F5F5F5 ;
}
.backToTop {
    display: block;
    width: 40px;
    height: 32px;
    font-size: 26px;
    line-height: 32px;
    font-family: verdana, arial;
    padding: 5px 0;
    background-color: #000;
    color: #fff;
    text-align: center;
    position: fixed;
    _position: absolute;
    right: 150px;
    bottom: 100px;
    _bottom: "auto";
    cursor: pointer;
    opacity: .6;
    filter: Alpha(opacity=60);
}

.toTop {
	width:32px;
	height:30px;
	background:#555;
	background:rgba(85,85,85,0.3);
	position:fixed;
	bottom:80px;
	right:150px;
	text-align:center;
	cursor:pointer;
	display:none
}
